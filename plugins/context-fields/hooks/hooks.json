{
  "description": "Auto-activate Context Fields based on request type",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/inject-fields.sh"
          }
        ]
      }
    ]
  }
}
